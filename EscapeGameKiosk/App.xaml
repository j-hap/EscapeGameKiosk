<Application x:Class="EscapeGameKiosk.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:EscapeGameKiosk">
  <Application.Resources>
    <Style x:Key="OrbitronButtonBaseStyle" TargetType="ButtonBase">
      <Setter Property="FontFamily" Value="/EscapeGameKiosk;component/Fonts/#Orbitron"/>
      <Setter Property="Foreground" Value="#E6E6E6"/>
      <Setter Property="Background" Value="#1FFFFFFF"/>
      <Setter Property="BorderBrush" Value="#7FFFFFFF"/>
      <Setter Property="BorderThickness" Value="1"/>
      <Style.Triggers>
        <Trigger Property="IsMouseOver" Value="True">
          <Setter Property="Background" Value="#4FFFFFFF"/>
          <Setter Property="BorderBrush" Value="#BFFFFFFF"/>
          <Setter Property="Cursor" Value="Hand"/>
        </Trigger>
        <Trigger Property="IsEnabled" Value="False">
          <Setter Property="Opacity" Value="0.5"/>
        </Trigger>
      </Style.Triggers>
    </Style>
    <Style x:Key="OrbitronButtonStyle" TargetType="Button" BasedOn="{StaticResource OrbitronButtonBaseStyle}" />
    <Style x:Key="OrbitronToggleButtonStyle" TargetType="ToggleButton" BasedOn="{StaticResource OrbitronButtonBaseStyle}" />
    <Style x:Key="OrbitronPasswordBoxStyle" TargetType="PasswordBox">
      <Setter Property="FontFamily" Value="/EscapeGameKiosk;component/Fonts/#Orbitron"/>
      <Setter Property="Foreground" Value="#0B0B0B"/>
    </Style>
  </Application.Resources>
</Application>
